<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HandymansToolkit.Views.FloorPlanner"
             BackgroundColor="LightBlue"
             Title="Floor Planner">

    <StackLayout BackgroundColor="LightBlue" Spacing="15">
        
        <Image x:Name="resultImage"
                WidthRequest="400"
                HeightRequest="400"
                BackgroundColor="Transparent"
                HorizontalOptions="Center"
                VerticalOptions="Center"
               Margin="0, 20">
            <Image.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="2" Tapped="OnDoubleTapped">
                </TapGestureRecognizer>
            </Image.GestureRecognizers>
        </Image>




        <Button Text="Pick Image"
                Clicked="PickImage" 
                TextColor="Black"
                FontSize="Large"
                BackgroundColor="#00A3FF"
                BorderColor="Black"
                BorderWidth="5"
                CornerRadius="5"
                WidthRequest="350"
                HeightRequest="75"
                HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>